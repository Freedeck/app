<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="150"
        x:Class="Freedeck.Autoupdater"
        Background="rgb(20,20,20)"
        Width="800"
        Height="600"
        Title="Freedeck Autoupdater">
        <Border Background="rgba(0,0,0,0.25)" CornerRadius="15" Margin="10">
                <StackPanel HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                        <TextBlock Foreground="White" FontSize="24" TextAlignment="Center">Freedeck Autoupdater Logs</TextBlock>
                        <ScrollViewer>
                                <TextBlock Foreground="White" Name="AutoupdaterState" />
                        </ScrollViewer>
                </StackPanel>
        </Border>
</Window>
