<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Freedeck.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
             <TrayIcon.Icons>
                 <TrayIcons>
                     <TrayIcon Icon="/Assets/FDAP.ico" 
                               ToolTipText="Freedeck">
                         <TrayIcon.Menu>
                             <NativeMenu>
                                 <NativeMenuItem Header="Freedeck App" IsEnabled="False" />
                                 <NativeMenuItem Header="Close Freedeck" Click="CloseApp" />
                             </NativeMenu>
                         </TrayIcon.Menu>
                     </TrayIcon>
                 </TrayIcons>
             </TrayIcon.Icons>
</Application>